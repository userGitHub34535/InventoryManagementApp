<script type="text/javascript">

    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#addInventoryModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#addInventoryModal").modal('hide');
        });
    });
</script> 